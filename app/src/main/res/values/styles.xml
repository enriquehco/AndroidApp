<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorIntermediate</item>
        <item name="colorAccent">@color/colorIntermediate</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>
    <style name="ActivityTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorIntermediate</item>
        <item name="colorAccent">@color/colorIntermediate</item>
    </style>
    
    <!-- estilo para el alert dialog -->
    <style name="AlertDialogTheme">
        <item name="android:windowBackground">@drawable/rounded_corners</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:buttonBarPositiveButtonStyle">@string/default_entendido</item>
    </style>

    <!-- estilo para TabLayout -->
    <style name="AppTabLayout">
        <item name="tabBackground">@drawable/rounded_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_selector_bg</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/colorPrimaryDark</item>
    </style>

</resources>